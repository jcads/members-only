extends layout

block content
    section.container
        h1=title
        form(method="POST" action="")
            div.form-group
                label(for="username") Username:
                input#username.form-control(type="text" name="username" placeholder="johndoe" required="true")
            div.form-group
                label(for="password") Password:
                input#password.form-control(type="text" name="password" required="true")
            button.btn.btn-primary(type="submit") Login
